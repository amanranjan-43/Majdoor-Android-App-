<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/welcome_in_majdoor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        android:textColor="#226A63"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:padding="40sp"
        android:text="Select from the given options."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        android:textColor="#299187"
        android:textColorLink="#591818"
        android:textSize="30sp" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="HELP(CLIENT)"
        android:textColor="#ffffff"
        android:textSize="22sp" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="JOB(WORKER)"
        android:textColor="#ffffff"
        android:textSize="22sp" />


</LinearLayout>